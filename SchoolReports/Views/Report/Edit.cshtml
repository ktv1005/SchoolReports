@model SchoolReports.Models.ReportResult

@{
    ViewBag.Title = "Rapport aanpassen";
}

<h1>@ViewBag.CurrentStudent.Student.FullName - @ViewBag.CurrentStudent.Class.Name</h1>
<h3>@ViewBag.CurrentPeriod.Name @ViewBag.CurrentStudent.SchoolYear.Name</h3>

<div class="float-right">
    <b>Het rapport verwijderen:</b>
    <a href="@Url.Action("Delete", new { id = Model.Id })">
        <img src="~/Images/cross.png" alt="Rapport verwijderen" title="Rapport verwijderen" />
    </a>
</div>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Rapport</legend>

        @Html.EditorForModel()

        <p>
            <input type="submit" value="Aanpassen" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Annuleren", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval");
    @Scripts.Render("~/bundles/changeresulttext");
}
